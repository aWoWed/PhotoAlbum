@using Photo_album.Helpers
@model  Photo_album.Models.UserModels.LoginModel

@{
    ViewBag.Title = "User";
}

@using (Html.BeginForm())
{
<div class="text-box main-wrapper rounded-inst">
    @Html.AntiForgeryToken()
    <h4>Login to your account</h4>
    @Html.ValidationSummary("", new { @class = "alert alert-danger" })
    <div class="inst-group">
        @Html.TextBoxFor(model => model.UserName, new { @class = "inst-input", id = "username", placeholder = "Username" })
        <label class="inst-label" for="username">Username</label>
    </div>
    <div class="inst-group">
        @Html.PasswordFor(model => model.Password, new { @class = "inst-input", id = "password", placeholder = "Password" })
        <label class="inst-label" for="password">Password</label>
    </div>
    <div class="inst-group mt-4">
        @Html.MyCheckboxFor(model => model.RememberMe, new { @class = "inst-checkbox" })
        @Html.LabelFor(model => model.RememberMe, new { @class = "inst-label" })
    </div>
    <div>
        <button class="btn-inst" type="submit">Login</button>
    </div>
</div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("Logout", "User", FormMethod.Post, new { id = "logoutForm", @class = "ms-auto flex-nowrap navbar-nav" }))
    {
        @Html.AntiForgeryToken()
        <li class="nav-item">
            @Html.ActionLink("Profile", "Index", "Manage", new {}, htmlAttributes: new { @class = "nav-link" })
        </li>
        <li class="nav-item">
            <a class="nav-link" href="javascript:document.getElementById('logoutForm').submit()">Logout</a>
        </li>
    }
}
else
{
    <li class="nav-item">@Html.ActionLink("Register", "Register", "User", new {}, new {@class = "nav-link"})</li>
    <li class="nav-item">@Html.ActionLink("Login", "Login", "User", new {}, new { @class = "nav-link" })</li>
}